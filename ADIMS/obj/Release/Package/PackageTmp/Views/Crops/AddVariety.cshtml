@model ADIMS.ViewModels.AddVarietyViewModel
@{
    ViewBag.Title = "Add Variety";
    ViewBag.Action = "Add Variety";
    ViewBag.Controller = "Crops";

    var crops = (List<ADIMS.Models.crop>)ViewBag.crops;
    var fromCropList = (bool)ViewBag.fromCropList;


    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5><img height="30" width="30" src="~/icons/user_icon.png" /> &nbsp; &nbsp;  Add New Variety</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>

            <div class="ibox-content">
                @using (Html.BeginForm("AddVariety","Crops", FormMethod.Post, new { fromCropList = fromCropList}))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row" style="margin-top:15px;">
                            <div class="col-md-4">
                                <div class="form-group">
                                   <label>Select Crop</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.DropDownListFor(model => model.cropid, new SelectList(crops, "id", "name"), new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.cropid, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row" style="margin-top:15px;">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
