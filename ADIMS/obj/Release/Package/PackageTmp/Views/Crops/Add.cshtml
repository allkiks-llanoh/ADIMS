@model ADIMS.ViewModels.AddCropViewModel

@{ 
    ViewBag.Title = "Add Crops";
    ViewBag.Action = "Add";
    ViewBag.Controller = "Crops";

    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
    var unitsmeasure = (List<ADIMS.Models.unitofmeasure>)ViewBag.unitsofmeasure;
    var plantingmethods = (List<ADIMS.Models.plantingmethod>)ViewBag.plantingmethods;
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5><img height="30" width="30" src="~/icons/user_icon.png" /> &nbsp; &nbsp;  Add New Crop</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("Add", "Crops", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-horizontal">

                    <div class="row" style="margin-top:15px;">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Name</label><br/>
                                <div class="col-md-10" style="padding-left:0px;">
                                    @Html.TextBoxFor(model => model.name,  new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>  
                        </div>

                    </div>

                    <div class="row" style="margin-top:15px;">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Local Names</label><br />
                                <div class="col-md-10" style="padding-left:0px;">
                                    @Html.TextBoxFor(model => model.localnames, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.localnames, "", new { @class = "text-danger" })
                                </div>
                            </div>
                          </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Maturity Period (in months.)</label><br />
                                <div class="col-md-10" style="padding-left:0px;">
                                    @Html.TextBoxFor(model => model.maturityperiod, new { @class = "form-control" ,@type="number", @placeholder="e.g 3 months"})
                                    @Html.ValidationMessageFor(model => model.maturityperiod, "", new { @class = "text-danger"})
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Unit Measure</label><br />
                                <div class="col-md-10" style="padding-left:0px;">
                                    @Html.DropDownList("unitmeasure", new SelectList(unitsmeasure,"id","name"), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.unitmeasure, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                               <label>Planting Method</label><br />
                                <div class="col-md-10" style="padding-left:0px;">
                                    @Html.DropDownList("plantingmethod", new SelectList(plantingmethods,"id","name"), htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.plantingmethod, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

