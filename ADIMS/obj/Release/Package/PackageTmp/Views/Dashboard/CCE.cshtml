@{
    ViewBag.Title = "Crop Cutting Exercises Dashboard";
    ViewBag.Action = "Crop Cutting Exercises";
    ViewBag.Controller = "Dashboard";
    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
}

<div class="row">

    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Running Average Yield</h5>
                <h1 class="no-margins">600 Kg/Ha</h1>
                <div class="stat-percent font-bold text-navy"> <i class="fa fa-bolt"></i></div>
                <small>Yield</small>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Running Average Moisture Content</h5>
                <h1 class="no-margins">8.890 %</h1>
                <div class="stat-percent font-bold text-navy"> <i class="fa fa-bolt"></i></div>
                <small>Moisture</small>
            </div>
        </div>
    </div>

    
</div>
<div class="row">
    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>Number of Crop Cuts Completed</h5>
                <h1 class="no-margins">8,990</h1>
                <div class="stat-percent font-bold text-navy"> <i class="fa fa-bolt"></i></div>
                <small>Crop Cuts</small>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>CCEs Outstanding</h5>
                <h1 class="no-margins">120</h1>
                <div class="stat-percent font-bold text-navy"> <i class="fa fa-bolt"></i></div>
                <small>Outstanding</small>
            </div>
        </div>
    </div>

    <div class="col-lg-3">
        <div class="ibox">
            <div class="ibox-content">
                <h5>CCEs flagged</h5>
                <h1 class="no-margins">1</h1>
                <div class="stat-percent font-bold text-navy"> <i class="fa fa-bolt"></i></div>
                <small>Flagged</small>
            </div>
        </div>
    </div>
</div>