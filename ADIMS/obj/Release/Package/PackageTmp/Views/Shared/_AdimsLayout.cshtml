                            <li><a href="/dashboard/farmers">Farmers</a></li>
                            <li><a href="/dashboard/farms">Farms</a></li>
                            <li><a href="/dashboard/crops">Crops</a></li>
                            @*<li><a href="/dashboard/counties">Counties</a></li>*@
                        </ul>
                    </li>

                   @if (User.IsInRole("Extension Officer"))
                   {
                    <li>
                        <a href="#"><i class="fa fa-clipboard"></i> <span class="nav-label">Data Capture</span><span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level collapse">
                            <li><a href="/datacapture/farmers">Farmers</a></li>
                            <li><a href="/datacapture/cropsandyield">Crops</a></li>
                            <li><a href="/datacapture/insurance">Insurance</a></li>
