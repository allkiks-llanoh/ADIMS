@using ADIMS.Models;

@model ADIMS.ViewModels.DataCapture_CropProduction.AddCropProductionStatisticsViewModel
@{
    ViewBag.Title = "Crop Statistics (Annual/Seasonal)";
    ViewBag.Action = "Add Crop Production Statistics";
    ViewBag.Controller = "Crop Production";
    var user = ViewBag.userinfo as Tuple<string, county, subcounty>;

    var seasons = (List<season>)ViewBag.seasons;

    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
    string[] months = "January,February,March,April,May,June,July,August,September,October,November,December".Split(',');
}
<div class="ibox ibox-more">

    <div class="ibox-title">
        <h5><i class="fa fa-flask" style="font-size:18px;"></i> Crop Production Statistics</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content">

        @using (Html.BeginForm("AddCropProductionStatistics", "CropProduction", FormMethod.Post, new { @class = "" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group col-md-4">
                    <label>County</label>
                    @Html.HiddenFor(model => model.county)
                    @Html.TextBox("countyid", @user.Item2.name, new { @class = "form-control", @readonly = true })
                </div>
                <div class="form-group col-md-4">
                    <label>Sub-County</label>
                    @Html.HiddenFor(model => model.sub_county)
                    @Html.TextBox("subcountyid", @user.Item2.name, new { @class = "form-control", @readonly = true })
                </div>               
                <div class="form-group col-md-3">
                    <label>Month</label>
                    <select class="form-control">
                        <option value="null">Select an item</option>
                        @{
                            for (int i = 0; i < months.Length; i++)
                            {
                                <option value="@i">@months[i]</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Season</label><br />
                        <div class="col-md-12" style="padding-left:0px;">
                            @Html.DropDownListFor(model => model.season, new SelectList(seasons, "id", "name"), new { @class = "form-control" })

                        </div>
                    </div>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-4">
                    <label>No. sampled LS farms</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.no_sampled_ls_farms, new { @class = "form-control", @placeholder = "e.g 120" })


                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label>No. sampled CI farms</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.no_sampled_ci_farms, new { @class = "form-control", @placeholder = "e.g 45" })


                    </div>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-4">
                    <label>No. of sampled irrigation schemes</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.no_sampled_irrigation_schemes, new { @class = "form-control", @placeholder = "e.g 120" })


                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label>No. of sampled Greenhouses</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.no_sampled_greenhouses, new { @class = "form-control", @placeholder = "e.g 45" })


                    </div>
                </div>
                <div class="form-group col-md-4">
                    <label>No. of SS farms</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.no_ss_farms, new { @class = "form-control", @placeholder = "e.g 45" })


                    </div>
                </div>
            </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Core Crop</label>

                            <select class="form-control">
                                <option>Maize</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Hectares Planted</label>
                                @Html.TextBoxFor(x => x.hectares_planted, new { @class = "form-control", @placeholder = "e.g 150", type = "number" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Estimated Ha with certified Seed</label>
                                @Html.TextBoxFor(x => x.estimated_ha_certified_seeds, new { @class = "form-control", @placeholder = "e.g 186", type = "number" })
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Estimated Quantity of seed(MT)</label>
                                @Html.TextBoxFor(x => x.estimated_ha_certified_seeds, new { @class = "form-control", @placeholder = "e.g 186", type = "number" })
                            </div>
                        </div>
                    </div>

                </div>
                <br />
                <br />

                <div class="col-md-4">
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Submit"/>
                    </div>
                </div>

                <br /><br />
         }
    </div>
</div>
