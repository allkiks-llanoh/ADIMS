@using ADIMS.Models;

@model ADIMS.ViewModels.DataCapture_CropProduction.AddFoodStocksDataViewModel
@{
    ViewBag.Title = "Food Stocks Data";
    ViewBag.Action = "Add Food Stocks Data";
    ViewBag.Controller = "Crop Production";
    var user = ViewBag.userinfo as Tuple<string, county, subcounty>;

    var seasons = (List<season>)ViewBag.seasons;

    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
    string[] months = "January,February,March,April,May,June,July,August,September,October,November,December".Split(',');
}
<div class="ibox ibox-more">

    <div class="ibox-title">
        <h5><i class="fa fa-leaf" style="font-size:18px;"></i> Stocks Data</h5>
        <div class="ibox-tools">
            <a class="collapse-link">
                <i class="fa fa-chevron-up"></i>
            </a>
        </div>
    </div>

    <div class="ibox-content">

        @using (Html.BeginForm("AddFoodStocksData", "CropProduction", FormMethod.Post, new { @class = "" }))

        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="form-group col-md-4">
                    <label>County</label>
                    @Html.HiddenFor(model => model.county)
                    @Html.TextBox("countyid", @user.Item2.name, new { @class = "form-control", @readonly = true })
                </div>
                <div class="form-group col-md-4">
                    <label>Sub-County</label>
                    @Html.HiddenFor(model => model.sub_county)
                    @Html.TextBox("subcountyid", @user.Item2.name, new { @class = "form-control", @readonly = true })
                </div>               
                <div class="form-group col-md-3">
                    <label>Month</label>
                    <select class="form-control">
                        <option value="null">Select an item</option>
                        @{
                            for (int i = 0; i < months.Length; i++)
                            {
                                <option value="@i">@months[i]</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label>Season</label><br />
                        <div class="col-md-12" style="padding-left:0px;">
                            @Html.DropDownListFor(model => model.season, new SelectList(seasons, "id", "name"), new { @class = "form-control" })

                        </div>
                    </div>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-4">
                    <label>No. Sampled Farmers</label><br />
                    @Html.TextBoxFor(model => model.total_sampled_farmers, new { @class = "form-control", @placeholder = "e.g 45" })
                </div>
                <div class="form-group col-md-4">
                    <label>No. Sampled Traders/Warehouses</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.total_sampled_traders, new { @class = "form-control", @placeholder = "e.g 45" })
                    </div>
                </div>

            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-4">
                    <label>No. Sampled Millers</label><br />
                    @Html.TextBoxFor(model => model.total_sampled_millers, new { @class = "form-control", @placeholder = "e.g 45" ,type="number"})
                </div>
                <div class="form-group col-md-4">
                    <label>No. of NCPB Depots</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.total_ncpb_depots, new { @class = "form-control", @placeholder = "e.g 45", type = "number" })
                    </div>
                </div>
               
                <div class="form-group col-md-4">
                    <label>No. of Food Aid Agencies</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.total_food_aid_agencies, new { @class = "form-control", @placeholder = "e.g 45", type = "number" })
                    </div>
                </div>
            </div>
            <br/>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Food Crop</label>
                        <select class="form-control">
                            <option>Maize</option>
                        </select>
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="form-group col-md-2">
                    <label>Farmers</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.farmer_bags, new { @class = "form-control", @placeholder = "e.g 120" })


                    </div>
                </div>
                <div class="form-group col-md-2">
                    <label>Traders</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.trader_bags, new { @class = "form-control", @placeholder = "e.g 45" })


                    </div>
                </div>
                <div class="form-group col-md-2">
                    <label>Millers</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.miller_bags, new { @class = "form-control", @placeholder = "e.g 45" })


                    </div>
                </div>
                <div class="form-group col-md-2">
                    <label>NCPB Depots</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.ncpb_bags, new { @class = "form-control", @placeholder = "e.g 45" })


                    </div>
                </div>
                <div class="form-group col-md-2">
                    <label>Food Aid Agencies</label><br />
                    <div>
                        @Html.TextBoxFor(model => model.food_aid_bags, new { @class = "form-control", @placeholder = "e.g 45" })


                    </div>
                </div>
            </div>
            <br />
                <br />
                <div class="col-md-4">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary" />
                    </div>
                </div>
                <br /><br />
                            }
    </div>
</div>
