<div ng-controller="registerController" class="fadeInRight">
    <div class="panel-heading">
        <h1>Register</h1>
        <h2 class="panel-title-more">
            Ministry of Agriculture, Livestock and Fisheries
        </h2>

        <br />

    </div>
    <div class="panel-body">
        <div class="form-group">
            <label>Email Address *</label>
            <input class="form-control" required type="text" placeholder="someone@example.com" />
        </div>
        <div class="form-group">
            <label>Password *</label>
            <input class="form-control" placeholder="password" required type="password" />
        </div>
        <div class="form-group">
            <label>Repeat Password *</label>
            <input class="form-control" placeholder="confirm password" required type="password" />
        </div>
        <div class="form-group">
            <a href="#/forgot-password" class="pull-left">
                Forgot Password?
            </a>
            <a href="#/login" class="pull-right">
                Already have an account
            </a>
        </div>

    </div>
    <div class="panel-footer footer-more">
        <div class="form-group">
            <button type="submit" class="btn btn-primary">
                Sign Up
            </button>
        </div>
    </div>

</div>