@model ADIMS.ViewModels.FileUploadViewModel
@{
    ViewBag.Action = "Index";
    ViewBag.Controller = "Documents";
    ViewBag.Title = "Upload";
    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5><img height="30" width="30" src="~/icons/user_icon.png" /> &nbsp; &nbsp;  Upload File</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("Upload","Documents",FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name</label><br />
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Description</label><br />
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.description, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Tags</label><br />
                                    <div class="col-md-10">
                                        @Html.TextBoxFor(model => model.tags, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.tags, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>File</label><br />
                                    <div class="col-md-10">
                                        <input type="file" name="file" id="file" value="" class="form-control"/>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

