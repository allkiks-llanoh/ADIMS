<title>Food Stocks Data Report - ADIMS</title>
<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ibox-more">
            <div class="ibox-title">
                <h5><i class="fa fa-leaf" style="font-size:18px;"></i> <i class="ion-arrow-right-c" style="margin:0px 3px;"></i> <i class="ion-document" style="font-size:18px; margin-right:5px;"></i> Food Stocks Data Reports</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a href="/CropProduction/AddFoodStocksData">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th style="font-size:17px;">County</th>
                                <th style="font-size:17px;">Sub-County</th>
                                <th style="font-size:17px;">Month</th>
                                <th style="font-size:17px;">Season</th>

                                <th style="font-size:17px;">No. sampled Farmers</th>
                                <th style="font-size:17px;">No. Sampled Traders/Warehouses</th>
                                <th style="font-size:17px;">No. Sampled Millers</th>
                                <th style="font-size:17px;">No. of NCPB Depots</th>
                                <th style="font-size:17px;">No. of Food Aid Agencies</th>

                                <th style="font-size:17px;">Food Crop</th>


                                <th style="font-size:17px;">Farmers</th>
                                <th style="font-size:17px;">Traders</th>
                                <th style="font-size:17px;">Millers</th>
                                <th style="font-size:17px;">NCPB Depots</th>
                                <th style="font-size:17px;">Food Aid Agencies</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var random = new Random();

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.county1.name</td>
                                        <td>@item.subcounty.name</td>
                                        <td>@item.month</td>
                                        <td>@item.season1.name</td>

                                        <td>@item.total_sampled_farmers</td>
                                        <td>@item.total_sampled_traders</td>
                                        <td>@item.total_sampled_millers</td>
                                        <td>@item.total_ncpb_depots</td>
                                        <td>@item.total_food_aid_agencies</td>

                                        <td>@item.commodity</td>

                                        <td>@item.farmer_bags</td>
                                        <td>@item.trader_bags</td>
                                        <td>@item.miller_bags</td>
                                        <td>@item.ncpb_bags</td>
                                        <td>@item.food_aid_bags</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
<script src="~/js/plugins/dataTables/datatables.min.js"></script>

<!-- Page-Level Scripts -->
<script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'Food Stocks Data Report - ADIMS'},
                    { extend: 'pdf', title: 'Food Stocks Data Report - ADIMS'},

                    {
                        extend: 'print', title: 'Food Stocks Data Report - ADIMS',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-sizse', '11px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]

            });



        });


</script>
