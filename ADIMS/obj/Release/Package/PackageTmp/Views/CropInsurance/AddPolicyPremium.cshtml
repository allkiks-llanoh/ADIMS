@model ADIMS.ViewModels.AddPolicyPremiumViewModel

@{
    ViewBag.Title = "Add Policy Premium";
    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
    int policy = (int)ViewBag.policy;

    ViewBag.Controller = "Crop Insurance";
    ViewBag.Action = "Create Premium Policy";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5><img height="30" width="30" src="~/icons/user_icon.png" /> &nbsp; &nbsp;  Add Policy Premium</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("AddPolicyPremium","CropInsurance", new { policy = policy }, FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <h4>Add Farm Insurance Policy Premium</h4>
                        <hr />

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label>Amount</label><br/>
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.amount, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.amount, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Submit" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
