@model IList<ADIMS.ViewModels.CCEQueueReportViewModel>
@{
    ViewBag.Title = "CCE Queue(s) Report";
    Layout = "~/Views/Shared/_AdimsLayout.cshtml";

    ViewBag.Controller = "Crop Insurance";
    ViewBag.Action = "Report";
}

<title>Crop Cutting Queue Report - ADIMS</title>
<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ibox-more">
            <div class="ibox-title">
                <h5><i class="fa fa-line-chart" style="font-size:18px;"></i> <i class="ion-arrow-right-c" style="margin:0px 3px;"></i> <i class="ion-document" style="font-size:18px; margin-right:5px;"></i> @ViewBag.Title</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                   
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th style="font-size:17px;">UAI Name</th>
                                <th style="font-size:17px;">Farms Sampled</th>
                                <th style="font-size:17px;">Average Wet Weight (Kgs)</th>
                                <th style="font-size:17px;">Dry Weight (Kgs)</th>

                                <th style="font-size:17px;">Average Moisture Content (Kgs)</th>
                                <th style="font-size:17px;">Average Farm Size</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @{

                                foreach (var item in Model)
                                {
                                    <tr class="gradeC">
                                        <td>@item.UAIName</td>
                                        <td>@item.farmsSampled</td>
                                        <td>@item.averageWetWeight</td>
                                        <td>@item.dryWeight</td>

                                        <td>@item.averageMoistureContent</td>
                                        <td>@item.averageFarmSize in acre(s)</td>
                                        
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
<script src="~/js/plugins/dataTables/datatables.min.js"></script>

<!-- Page-Level Scripts -->
<script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'CCE Queues Report - ADIMS'},
                    { extend: 'pdf', title: 'CCE Queues Report - ADIMS'},

                    {
                        extend: 'print', title: 'CCE Queues Report - ADIMS',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '11px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]

            });



        });


</script>


