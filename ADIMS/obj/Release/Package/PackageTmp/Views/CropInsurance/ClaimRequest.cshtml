@model ADIMS.ViewModels.ClaimRequestViewModel
@{
    ViewBag.Title = "Claim Request";
    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
    ViewBag.Action = "Claim";
    ViewBag.Controller = "Crop Insurance";

    var policy = (ADIMS.Models.farm_policy)ViewBag.policy;
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Policy Details</h5>
                <div class="ibox-tools">
                    @*<a href="/cropinsurance/addpolicypremium?policy=@Model.id" style="color:white;" class="btn btn-primary btn-rounded">&nbsp;Add Premium&nbsp;</a>*@
                </div>
            </div>
            <div class="ibox-content">

                <div class="row">

                    <div class="col-md-6">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Identifier:</label>
                                    <span class="col-md-12" style="padding-left:0px;font-size:20px;font-weight:bold;color:#1ab394;">
                                        @policy.insurance_company.initials - @policy.id
                                    </span>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Policy Number:</label>
                                    <span class="col-md-12" style="padding-left:0px;font-size:20px;font-weight:bold;color:#1ab394;">
                                        @policy.policy_number
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="margin-top:15px;">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label style="font-weight:bold;">Insurance Company</label><br />
                                    <span class="col-md-12" style="padding-left:0px;font-size:20px;">
                                        @policy.insurance_company.name
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Sum Insured</label><br />
                                    <span class="col-md-12" style="padding-left:0px;font-size:20px;">
                                        @policy.sum_insured
                                    </span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Crop</label><br />
                                    <span class="col-md-12" style="padding-left:0px;font-size:20px;">
                                        @policy.crop.name
                                    </span>
                                </div>
                            </div>

                        </div>

                        <div class="row" style="margin-top:15px;">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label style="font-weight:bold;">UAI Name</label><br />
                                    <span class="col-md-12" style="padding-left:0px;font-size:20px;">
                                        @policy.uai_name
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5><img height="30" width="30" src="~/icons/user_icon.png" /> &nbsp; &nbsp;Lodge Claim</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">
                @using (Html.BeginForm("ClaimRequest", "CropInsurance",new {id = policy.id }, FormMethod.Post))
                {
                    <div class="form-horizontal">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Actual Yield</label><br />
                                    <div class="col-md-12" style="padding-left:0px;">
                                        @Html.TextBoxFor(model => model.actual_yield, new { @class = "form-control" , @placeholder = "Yield in Kgs/Ha"})
                                        @Html.ValidationMessageFor(model => model.actual_yield, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10" style="padding-left:0px;">
                                <input type="submit" value="Submit" class="btn btn-success" />
                            </div>
                        </div>

                    </div>
                    
                }
            </div>
        </div>
    </div>
</div>