@model ADIMS.ViewModels.EditUserViewModel

@{
    ViewBag.Title = "Edit User Informations";
    ViewBag.Controller = "Admin";
    ViewBag.Action = "Edit User";
    Layout = "~/Views/Shared/_AdimsLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5><img height="30" width="30" src="~/icons/user_icon.png" /> &nbsp; &nbsp;  User Information Change</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>

                </div>
            </div>
            <div class="ibox-content">

                @using (Html.BeginForm("EditUser", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-horizontal">

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Name</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.TextBoxFor(model => model.name, new { @class = "form-control" })
                                       
                                    </div>
                                </div>
                            </div>
                           
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Email</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.TextBoxFor(model => model.email, new { @class = "form-control", @type = "email", @placeholder = "someone@example.com" })

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Phone Number</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.TextBoxFor(model => model.phonenumber, new { @class = "form-control", @type = "tel" })
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Administrator</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.CheckBoxFor(model => model.Administrator, new { @class = "i-checks" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Extension Officer</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.CheckBoxFor(model => model.ExtensionOfficer, new { @class = "i-checks" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-10">
                                <div class="form-group">
                                    <label>Ministry Official</label><br />
                                    <div class="col-md-10" style="padding-left:0px;">
                                        @Html.CheckBoxFor(model => model.MinistryOfficial, new { @class = "i-checks" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-10">
                                <input type="submit" value="Save Changes" class="btn btn-primary" />
                            </div>
                        </div>

                    </div>

                }

            </div>
        </div>
    </div>
</div>
