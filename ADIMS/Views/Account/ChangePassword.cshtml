@model ADIMS.Models.ChangeMyPasswordViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.Title = "Change Password Module";
    ViewBag.Controller = "Account";
    ViewBag.Action = "Change Password";

    string errorMessage = ViewBag.error as string;

    var user = User.Identity;
}

<div class="panel panel-more col-md-6">
    <div class="panel-body">

        @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
        {
                <div class="form-group">
                    <p class="text-danger">
                        @if(!string.IsNullOrWhiteSpace(errorMessage))
                        {
                            <span>@errorMessage</span>
                        }
                    </p>
                </div>
                <div class="form-group">
                    <label>New Password *()</label>
                    <p><small>Use a strong password that is easy to remember.</small></p>

                    @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control", @placeholder = "********", required = true })
                </div>

                <div class="form-group">
                    <label>Repeat Password *()</label>

                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", @placeholder = "********", required = true })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-success">Change</button>
                </div>
        }

    </div>
</div>