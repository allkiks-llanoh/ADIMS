
@{
    ViewBag.Title = "Progress List";
    ViewBag.Action = "ProgressList";
    ViewBag.Controller = "Farmers";

    Layout = "~/Views/Shared/_AdimsLayout.cshtml";

    var individuals = (List<ADIMS.Models.farmer_ind_progress>)ViewBag.individuals;
    var corporates = (List<ADIMS.Models.farmer_corp_progress>)ViewBag.corporates;
    var groups = (List<ADIMS.Models.farmer_grp_progress>)ViewBag.groups;

}
<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
<script src="~/js/plugins/dataTables/datatables.min.js"></script>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Farmer Entry Progress</h5>
                <div class="ibox-tools">
                    <a href="/farmers/newfarmingentity" style="color:white;" class="btn btn-primary btn-rounded">&nbsp;Add Farmer&nbsp;</a>
                </div>
            </div>
            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                               <th>Name</th>
                               <th>Progress Key</th>
                               <th>Date</th>
                               <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in individuals)
                            {
                                <tr class="gradeX">
                                    <td>@item.name</td>
                                    <td>@item.progresskey</td>
                                    <td>@item.date_created.GetValueOrDefault().ToShortDateString()</td>
                                    <td>
                                        <a href="/farmers/add?progresskey=@item.progresskey" class="btn btn-primary">Continue</a>
                                    </td>
                                </tr>
                              }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Progress Key</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Progress Key</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in corporates)
                            {
                                <tr class="gradeX">
                                    <td>@item.name</td>
                                    <td>@item.progresskey</td>
                                    <td>@item.date_created.GetValueOrDefault().ToShortDateString()</td>
                                    <td>
                                        <a href="/farmers/addfarmercorporate?progresskey=@item.progresskey" class="btn btn-primary">Continue</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Progress Key</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <div class="ibox-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Progress Key</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in groups)
                            {
                                <tr class="gradeX">
                                    <td>@item.name</td>
                                    <td>@item.progresskey</td>
                                    <td>@item.date_created.GetValueOrDefault().ToShortDateString()</td>
                                    <td>
                                        <a href="/farmers/addfarmergroup?progresskey=@item.progresskey" class="btn btn-primary">Continue</a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Name</th>
                                <th>Progress Key</th>
                                <th>Date</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>


        </div>
    </div>
</div>

<script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'ADIMS'},
                    {extend: 'pdf', title: 'ADIMS'},

                    {extend: 'print',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]

            });

        });

</script>