<!-- FooTable -->
<link href="~/css/plugins/footable/footable.core.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ibox-more">
            <div class="ibox-title">
                <h5><i class="fa fa-warning" style="font-size:18px;"></i> <i class="ion-arrow-right-c" style="margin:0px 3px;"></i> <i class="ion-document" style="font-size:18px; margin-right:5px;"></i> Weather Data Reports</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a href="/CropProduction/AddEarlyWarning">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="8">
                    <thead>
                        <tr>

                            <th data-toggle="true">Crop</th>
                            <th>County</th>
                            <th>Sub-County</th>
                            <th>Month</th>
                            <th>Season</th>
                            <th data-hide="all">Crop Growth Rate</th>
                            <th data-hide="all">Rainfall Perfomance</th>
                            <th data-hide="all">Achieved Acreage</th>
                            <th data-hide="all">Time of Planting</th>
                            <th data-hide="all">Crop Condition</th>
                            <th data-hide="all">Water Availability at critical crop stage</th>
                            <th data-hide="all">Expected Yield Compared to LTA</th>
                            <th data-hide="all">Food Stocks available for consumption compared to normal consumtion.</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            var random = new Random();
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.crop</td>
                                    <td>@item.county</td>
                                    <td>@item.sub_county</td>
                                    <td>@item.month</td>
                                    <td>@item.season</td>

                                    @{ 
                                        for (int i = 0; i < 8; i++)
                                        {
                                            var num = random.Next(0, 3);

                                            if(num == 0)
                                            {
                                                <td class="text-primary">
                                                    <i class="fa fa-check-circle"></i> Normal
                                                </td>
                                            }
                                            else if (num == 1)
                                            {
                                                <td class="text-warning">
                                                    <i class="fa fa-warning"></i> Alarm/Alert
                                                </td>
                                            }
                                            else if (num == 2)
                                            {
                                                <td class="text-danger">
                                                    Emergency
                                                </td>
                                            }
                                        }
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5">
                                <ul class="pagination pull-right"></ul>
                            </td>
                        </tr>
                    </tfoot>
                </table>

            </div>
        </div>
    </div>
</div>

 <!-- FooTable -->
<script src="~/js/plugins/footable/footable.all.min.js"></script>

