<title>Planting Fertilizer Utilization Report - ADIMS</title>
<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ibox-more">
            <div class="ibox-title">
                <h5><i class="fa fa-cubes" style="font-size:18px;"></i> <i class="ion-arrow-right-c" style="margin:0px 3px;"></i> <i class="ion-document" style="font-size:18px; margin-right:5px;"></i> Planting Fertilizer Utilization Reports</h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                    <a href="/CropProduction/AddPlantingFertilizer">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th style="font-size:17px;">County</th>
                                <th style="font-size:17px;">Sub-County</th>
                                <th style="font-size:17px;">Month</th>
                                <th style="font-size:17px;">Season</th>
                                <th style="font-size:17px;">Core Crop</th>
                                <th style="font-size:17px;">Hectares Planted</th>

                                <th style="font-size:17px;">Planting Fertilizer 1</th>
                                <th style="font-size:17px;">Total fertilizer used (in bags)</th>
                                <th style="font-size:17px;">Planting Fertilizer 2</th>
                                <th style="font-size:17px;">Total fertilizer used (in bags)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var random = new Random();

                                foreach (var item in Model)
                                {
                                    <tr class="gradeC">
                                        <td>@item.county</td>
                                        <td>@item.sub_county</td>
                                        <td>@item.month</td>
                                        <td>@item.season</td>
                                        <td>@item.core_crop</td>
                                        <td>@item.hectares_planted</td>

                                        <td>@item.planting_fertilizer_1</td>
                                        <td>@item.total_fertilizer_used_1</td>

                                        <td>@item.planting_fertilizer_2</td>
                                        <td>@item.total_fertilizer_used_2</td>
                                    </tr>
                                                }
                            }

                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

</div>
<script src="~/js/plugins/dataTables/datatables.min.js"></script>

<!-- Page-Level Scripts -->
<script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'Planting Fertilizer Utilization Report - ADIMS'},
                    {extend: 'pdf', title: 'Planting Fertilizer Utilization Report - ADIMS'},

                    {extend: 'print',title: 'Planting Fertilizer Utilization Report - ADIMS',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '11px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]

            });



        });


</script>
