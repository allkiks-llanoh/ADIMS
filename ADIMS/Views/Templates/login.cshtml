@functions{

    public string GetAntiforgeryToken()
    {
        string cookieToken, formToken;

        AntiForgery.GetTokens(null, out cookieToken, out formToken);

        return $"{cookieToken}:{formToken}";
    }

}

<div ng-controller="loginController" class="fadeInRight">
    <form role="form" ng-submit="sendForm()" method="post">
        <input id="antiForgeryToken" data-ng-model="antiForgeryToken" type="hidden" data-ng-init="antiForgeryToken='@GetAntiforgeryToken()'" />
        <div>
            <div class="panel-heading">
                <h1>Sign In</h1>
                <h2 class="panel-title-more">
                    Ministry of Agriculture, Livestock and Fisheries
                </h2>

                <br />

            </div>
            <div class="panel-body">
                <div class="form-group">
                    <label>Email Address *</label>
                    <input class="form-control" required type="text" ng-model="user.Email" placeholder="someone@example.com" />
                </div>
                <div class="form-group">
                    <label>Password *</label>
                    <input class="form-control" placeholder="password" ng-model="user.Password" required type="password" />
                </div>
                <div class="form-group">
                    <a href="#/forgot-password" class="pull-left">
                        Forgot Password?
                    </a>
                    <a href="#/register" class="pull-right">
                        Create Account
                    </a>
                </div>

            </div>
            <div class="panel-footer footer-more">
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">
                        Login
                    </button>
                </div>
            </div>

        </div>
    </form>
    

</div>