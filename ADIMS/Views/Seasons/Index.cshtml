@model List<ADIMS.Models.season>
@{
    ViewBag.Title = "Seasons";
    Layout = "~/Views/Shared/_AdimsLayout.cshtml";

    ViewBag.Controller = "Seasons";
    ViewBag.Action = "All Seasons";
}

<link href="~/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
<script src="~/js/plugins/dataTables/datatables.min.js"></script>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Crops</h5>
                <div class="ibox-tools">
                    <a href="/seasons/add" style="color:white;" class="btn btn-primary btn-rounded">&nbsp;Add Season&nbsp;</a>
                </div>
            </div>
            <div class="ibox-content">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var season in Model)
                            {
                                <tr class="gradeX">
                                    <td>@season.id</td>
                                    <td><a href="/farmers/details/@season.id">@season.name</a></td>
                                    <td>@season.startdate</td>
                                    <td>@season.enddate</td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>

            </div>
        </div>
    </div>
</div>

<script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                pageLength: 25,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'List of Seasons'},
                    {extend: 'pdf', title: 'List of Seasons'},

                    {extend: 'print',
                     customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                    .addClass('compact')
                                    .css('font-size', 'inherit');
                    }
                    }
                ]

            });

        });

</script>